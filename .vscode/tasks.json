{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O3",
                "-std=c++17",
                "-Wall",
                "-g",
                "${workspaceFolder}\\*.cpp",
                "${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${fileDirname}\\release\\win64\\${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}\\src\\include",
                "-L${workspaceFolder}\\src\\lib\\x64",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lSDL2_net",
                "-llibSDL2_gfx-1-0-0",
                "-lSDL2_image",
                "-lnfd",
                "-lole32",
                "-luuid",
                "-lshell32",
                "-static-libgcc",
                "-static-libstdc++",
                "-Wl,-Bstatic,--whole-archive",
                "-lwinpthread",
                "-Wl,--no-whole-archive"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": [
                "Copy Assets",
                "Copy Libs",
                "Copy Win"
            ]
        },
        {
            "label": "Copy Assets",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "'copy /Y /B assets\\* release\\win64'"
            ],
            "group": "build",
            "dependsOn": [
                "Make Dirs"
            ]
        },
        {
            "label": "Copy Libs",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "'copy /Y /B src\\lib\\x64\\*.dll release\\win64\\lib'"
            ],
            "group": "build",
            "dependsOn": [
                "Make Dirs"
            ]
        },
        {
            "label": "Copy Win",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "'copy /Y /B src\\windows\\* release\\win64'"
            ],
            "group": "build",
            "dependsOn": [
                "Make Dirs"
            ]
        },
        {
            "label": "Make Dirs",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist release\\win64\\lib mkdir release\\win64\\lib"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}